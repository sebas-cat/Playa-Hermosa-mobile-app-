<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Infohotel.Registro"
             Title="Registro">
    <VerticalStackLayout Padding="20" Spacing="15">
        <BoxView Color="#F3F3EE"
            HorizontalOptions="Fill"
            VerticalOptions="Fill"/>

        <Entry x:Name="NombreEntry" Placeholder="Nombre" />
        <Entry x:Name="ApellidoEntry" Placeholder="Apellido" />
        <Entry x:Name="CorreoEntry" Placeholder="Correo electrónico" />
        <Entry x:Name="ContrasenhaEntry" Placeholder="Contraseña" IsPassword="True" />
        <Entry x:Name="EdadEntry" Placeholder="Edad" Keyboard="Numeric" />
        <Entry x:Name="DomicilioEntry" Placeholder="Domicilio" />

        <Button Text="Crear cuenta"
                Clicked="OnRegistroClick"
                BackgroundColor="#004400"
                TextColor="White"/>

    </VerticalStackLayout>
</ContentPage>