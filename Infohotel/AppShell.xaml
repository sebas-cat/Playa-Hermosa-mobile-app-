<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Infohotel.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Infohotel"
    Title="Infohotel">

    <!-- Perfil, Reservas, Reservar, Geografia y Mas -->


    <TabBar>
        <Tab Title="Inicio" Icon="homeicono.svg">
            <ShellContent ContentTemplate="{DataTemplate local:MainPage}"/>
        </Tab>

        <!--
        
        <Tab Title="Perfil" Icon="perfilicono.svg">
            <ShellContent ContentTemplate="{DataTemplate local:Perfil}"/>
        </Tab>
        
        -->
        <Tab Title="Reservar" Icon="reservarimagen.svg">
            <ShellContent ContentTemplate="{DataTemplate local:Reservar}"/>
        </Tab>

        <Tab Title="Reservas" Icon="reservasicono.svg">
            <ShellContent ContentTemplate="{DataTemplate local:Reservas}"/>
        </Tab>

        <Tab Title="Geografia" Icon="mapaicono.svg">
            <ShellContent ContentTemplate="{DataTemplate local:Geografia}"/>
        </Tab>

        <Tab Title="Ayuda" Icon="ayudaicono.svg">
            <ShellContent ContentTemplate="{DataTemplate local:Mas}"/>
        </Tab>
    </TabBar>

</Shell>
