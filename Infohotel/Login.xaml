<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Infohotel.Login"
             Title="Login"
             NavigationPage.HasNavigationBar="False">

    <ScrollView>
        <Grid>
            <Image Source="fondo1.png" Aspect="AspectFill" />
            <BoxView Color="#F3F3EE"
                     HorizontalOptions="Fill"
                     VerticalOptions="Fill"
                       InputTransparent="True"/>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Image Grid.Row="0"
                       Source="logohotel2.png"
                       WidthRequest="200"
                       HeightRequest="100"
                       Margin="0,50,0,30"/>

                <!-- FORMULARIO -->
                <StackLayout Grid.Row="1" Padding="10,20" Spacing="12">
                    <Entry x:Name="UsernameEntry"
                           Placeholder="Correo electr칩nico"
                           PlaceholderColor="#333333"
                           Keyboard="Email"/>

                    <Entry x:Name="PasswordEntry"
                           Placeholder="Contrase침a"
                           PlaceholderColor="#333333"
                           IsPassword="True"/>

                    <Button Text="Iniciar Sesi칩n"
                            BackgroundColor="#D9C49B"
                            TextColor="#333333"
                            x:Name="BtnIr"
                            Clicked="OnLoginClicked"/>

                    <StackLayout Orientation="Horizontal">
                        <Button Text="Recuperar Contrase침a"
        Clicked="OnCambiarPasswordClicked"
        BackgroundColor="Transparent"
        TextColor="#333333"
        Padding="0"
        FontSize="12"/>

                        <Label Text="Registrarse"
                               FontSize="Small"
                               TextColor="#333333"
                               FontAttributes="Bold"
                               HorizontalOptions="FillAndExpand"
                               HorizontalTextAlignment="End">
                            <Label.GestureRecognizers>
                                <TapGestureRecognizer Tapped="OnRegisterTapped"/> 
                            </Label.GestureRecognizers>
                        </Label>
                    </StackLayout>
                </StackLayout>

            </Grid>
        </Grid>
    </ScrollView>

</ContentPage>
