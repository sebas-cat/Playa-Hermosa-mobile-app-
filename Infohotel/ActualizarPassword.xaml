<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Infohotel.ActualizarPassword"
             Title="Nueva contraseña"
             NavigationPage.HasNavigationBar="False">

    <ScrollView>
        <Grid>
            <Image Source="fondo1.png" Aspect="AspectFill" />
            <BoxView Color="#F3F3EE" HorizontalOptions="Fill" VerticalOptions="Fill" />

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Image Grid.Row="0" Source="logohotel2.png"
                       WidthRequest="200" HeightRequest="100"
                       Margin="0,50,0,30"/>

                <StackLayout Grid.Row="1" Padding="10,20" Spacing="12">
                    <Label Text="Ingresá tu nueva contraseña"
                           FontSize="Medium"
                           FontAttributes="Bold"
                           HorizontalTextAlignment="Center"
                           TextColor="#333333"/>

                    <Entry x:Name="NuevaEntry"
                           Placeholder="Nueva contraseña"
                           PlaceholderColor="#333333"
                           IsPassword="True"/>

                    <Entry x:Name="ConfirmarEntry"
                           Placeholder="Confirmar nueva contraseña"
                           PlaceholderColor="#333333"
                           IsPassword="True"/>

                    <Button Text="Guardar"
                            BackgroundColor="#D9C49B"
                            TextColor="#333333"
                            Clicked="OnGuardarClicked"/>
                </StackLayout>
            </Grid>
        </Grid>
    </ScrollView>
</ContentPage>
