<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             
             x:Class="Infohotel.MainPage"
             BackgroundColor="#F3F3EE">
            

    <ScrollView>
        <VerticalStackLayout Padding="10">

            <Image Source="https://content.r9cdn.net/rimg/dimg/62/80/af29351f-city-80668-168767332de.jpg"
                   WidthRequest="400"
                   HeightRequest="220"
                   Aspect="AspectFill"
                   Margin="0,10,0,0"/>

            <Label Text="Playa Hermosa"
                   Margin="10,10,0,0"
                   FontSize="Large"
                   FontFamily="Calisto MT"
                   FontAttributes="Bold"/>

            <Label Text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Duis vitae sapien quis , blandit est. Praesent finibus ligula tempus tortor finibus, non blandit metus sollicitudin. Ut venenatis turpis nec nisl varius faucibus. Vestibulum at quam quis neque mollis euismod. Sed tortor risus, tincidunt et convallis eu, commodo ac sem. Integer a risus massa. Nullam ullamcorper ut metus at egestas. Nullam ac ipsum sapien. Maecenas tincidunt ex lorem, vel ullamcorper libero dictum a. Donec id auctor urna. In porttitor diam vitae mi condimentum, id lacinia enim pulvinar."
                   Margin="10,5,10,20"
                   FontSize="Small"
                   FontFamily="Calisto MT"
                   LineBreakMode="WordWrap"/>

           
            <Image Source="https://ticotimes.net/wp-content/uploads/2025/09/waldof-astoria-2.jpg"
                   WidthRequest="400"
                   HeightRequest="220"
                   Aspect="AspectFill"
                   Margin="0,10,0,0"/>

            <Label Text="Hotel"
                   Margin="10,10,0,0"
                   FontSize="Large"
                   FontFamily="Calisto MT"
                   FontAttributes="Bold"/>

            <Label Text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Duis vitae sapien quis nulla vulputate dapibus. Interdum et malesuada fames ac ante ipsum primis in faucibus. Aliquam vestibulum augue id leo varius sollicitudin. Ut in pulvinar neque. Interdum et malesuada fames ac ante ipsum primis in faucibus. Nam a tortor suscipit, scelerisque velit vitae, blandit est. Praesent finibus Nullam ullamcorper ut metus at egestas. Nullam ac ipsum sapien. Maecenas tincidunt ex lorem, vel ullamcorper libero dictum a. Donec id auctor urna. In porttitor diam vitae mi condimentum, id lacinia enim pulvinar."
                   Margin="10,5,10,20"
                   FontSize="Small"
                   FontFamily="Calisto MT"
                   LineBreakMode="WordWrap"/>

          



            <Grid HeightRequest="220" Margin="0,10,0,0">
              
                <CarouselView x:Name="carousel"
       IndicatorView="indicator"
       Loop="True"
       ItemsLayout="HorizontalList">
                    <CarouselView.ItemsSource>
                        <x:Array Type="{x:Type x:String}">
                            <x:String>https://costa-rica-guide.com/wp-content/uploads/2019/06/DSCN7611.jpg</x:String>
                            <x:String>https://images.visitarcostarica.com/refugio-nacional-vida-silvestre-playa-hermosa-costa-rica.jpg</x:String>
                            <x:String>https://www.govisitcostarica.co.cr/images/photos/mob-playa-hermosa-guanacaste.jpg</x:String>
                        </x:Array>
                    </CarouselView.ItemsSource>
                    <CarouselView.ItemTemplate>
                        <DataTemplate>
                            <Image Source="{Binding}" Aspect="AspectFill"/>
                        </DataTemplate>
                    </CarouselView.ItemTemplate>
                </CarouselView>

              
                <Button Text="‹"
             Clicked="OnPrevClicked"
             BackgroundColor="#66000000"
             TextColor="White"
             FontSize="24"
             CornerRadius="24"
             WidthRequest="48" HeightRequest="48"
             VerticalOptions="Center" HorizontalOptions="Start"
             Margin="8"
             Padding="0"/>

                
                <Button Text="›"
             Clicked="OnNextClicked"
             BackgroundColor="#66000000"
             TextColor="White"
             FontSize="24"
             CornerRadius="24"
             WidthRequest="48" HeightRequest="48"
             VerticalOptions="Center" HorizontalOptions="End"
             Margin="8"
             Padding="0"/>
            </Grid>

            <IndicatorView x:Name="indicator"
                           IndicatorColor="LightGray"
                           SelectedIndicatorColor="#2E86C1"
                           HorizontalOptions="Center"
                           Margin="0,5,0,15"/>



        </VerticalStackLayout>
    </ScrollView>
    
    
</ContentPage>
